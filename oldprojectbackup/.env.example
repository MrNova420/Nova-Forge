# Nova Engine Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://localhost:5432/nova_engine
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nova_engine
DATABASE_USER=postgres
DATABASE_PASSWORD=

# Redis Configuration (optional, falls back to in-memory)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Security & Authentication
# ============================================
JWT_SECRET=your-secure-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-change-this

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================
# Storage & File Upload
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,image/gif,model/gltf-binary,audio/mpeg

# AWS S3 (optional, for production)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_ENVIRONMENT=development

# ============================================
# Third-party Services (optional)
# ============================================
# Analytics
GOOGLE_ANALYTICS_ID=

# Error Tracking
SENTRY_DSN=

# Email Service
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nova-engine.com

# ============================================
# Development Tools
# ============================================
DEBUG=false
LOG_LEVEL=info
ENABLE_PROFILING=false
