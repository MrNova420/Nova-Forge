{
  "name": "@nova-engine/hub",
  "version": "0.1.0",
  "description": "Nova Hub - Platform server for game hosting and distribution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --config ../../jest.config.cjs --rootDir ../../ --testMatch='**/packages/hub/**/*.test.ts' --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "game-server",
    "platform",
    "hosting",
    "distribution"
  ],
  "author": "Kayden Shawn Massengill (WeNova Interactive)",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/rate-limit": "^9.1.0",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.28.1",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.20.6"
  }
}
