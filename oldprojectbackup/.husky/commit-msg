#!/bin/sh

# Commit message validation
# Format: <type>: <subject>
# Types: feat, fix, docs, style, refactor, test, chore

commit_msg=$(cat "$1")

# Check if commit message matches conventional commits format
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}$"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow conventional commits format:"
  echo "  <type>: <subject>"
  echo "  or"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Example: feat: add new rendering system"
  echo "Example: fix(engine): resolve memory leak in ECS"
  echo ""
  exit 1
fi
