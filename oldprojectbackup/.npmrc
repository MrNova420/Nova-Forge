# Nova Engine - NPM Configuration
# Ensures consistent dependency installation

# Use latest npm features
engine-strict=false

# Enable workspace hoisting for faster installs
# Set to true for better compatibility with various environments (Android/Termux, older Node versions)
legacy-peer-deps=true

# Save exact versions for reproducibility
save-exact=false

# Auto-save dependencies
save=true

# Use package-lock.json
package-lock=true

# Progress display
progress=true
loglevel=notice
