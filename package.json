{
  "name": "nova-engine",
  "version": "0.1.0",
  "private": true,
  "description": "Nova Engine - A complete web-based game development platform",
  "keywords": [
    "game-engine",
    "webgl",
    "game-development",
    "editor",
    "3d"
  ],
  "author": "Nova Engine Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node -e \"process.platform === 'win32' ? require('child_process').execSync('scripts\\\\start-platform.bat', {stdio: 'inherit'}) : require('child_process').execSync('bash scripts/start-platform.sh start', {stdio: 'inherit'})\"",
    "start:windows": "scripts\\start-platform.bat",
    "start:unix": "bash scripts/start-platform.sh start",
    "stop": "bash scripts/start-platform.sh stop",
    "restart": "bash scripts/start-platform.sh restart",
    "status": "bash scripts/start-platform.sh status",
    "logs": "bash scripts/start-platform.sh logs",
    "start:dev": "concurrently \"npm run dev -w @nova-engine/hub\" \"npm run dev -w @nova-engine/unified-platform\"",
    "start:frontend": "npm run dev -w @nova-engine/unified-platform",
    "start:backend": "npm run dev -w @nova-engine/hub",
    "setup": "bash scripts/utils/setup.sh",
    "setup:windows": "scripts\\utils\\setup.bat",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "clean:all": "npm run clean && rm -rf package-lock.json",
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "build:engine": "npm run build -w @nova-engine/engine",
    "build:editor": "npm run build -w @nova-engine/editor",
    "build:server": "npm run build -w @nova-engine/server",
    "build:shared": "npm run build -w @nova-engine/shared",
    "dev": "npm run dev --workspaces --if-present",
    "dev:unified": "npm run dev -w @nova-engine/unified-platform",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test -- --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint -- --fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "docs:build": "typedoc --options config/typedoc.json",
    "docs:watch": "typedoc --options config/typedoc.json --watch",
    "bench": "npm run bench:math && npm run bench:ecs",
    "bench:math": "tsx benchmarks/math-operations.bench.ts",
    "bench:ecs": "tsx benchmarks/ecs-performance.bench.ts",
    "bench:rendering": "tsx benchmarks/rendering.bench.ts",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrNova420/Nova-Engine-editor.git"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "benchmark": "^2.1.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "overrides": {
    "dompurify": ">=3.2.4",
    "glob": ">=11.0.0",
    "esbuild": ">=0.24.3",
    "fast-jwt": ">=5.0.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
