{
  "name": "@nova-engine/engine",
  "version": "0.1.0",
  "description": "Nova Engine - Core game engine runtime",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:tsc && npm run build:js",
    "build:tsc": "tsc",
    "build:js": "vite build",
    "dev": "npx vite",
    "test": "jest --config ../../jest.config.cjs --rootDir ../../ --testMatch='**/packages/engine/**/*.test.ts'",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "game-engine",
    "webgl",
    "ecs",
    "3d"
  ],
  "author": "Kayden Shawn Massengill (WeNova Interactive)",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "ammojs-typed": "^1.0.6"
  }
}
