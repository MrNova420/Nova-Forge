{
  "name": "@nova-engine/server",
  "version": "0.1.0",
  "description": "Nova Engine - Platform backend server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
